@model gurps_manager_library.Models.Skill

<h2>Advantage</h2>

@using (Html.BeginForm(FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Add a new Advantage to the database</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div>
            <div>
                @Html.LabelFor(model => model.Name)
                @Html.TextBoxFor(model => model.Name)
            </div>

            <div>
                @Html.LabelFor(model => model.Description)
                @Html.TextBoxFor(model => model.Description)
            </div>
            
            <div>
                @Html.CheckBox("Strenght")
                @Html.Label("Strenght")
                @Html.CheckBox("Dexterity")
                @Html.Label("Dexterity")
                @Html.CheckBox("Intelligence")
                @Html.Label("Intelligence")
                @Html.CheckBox("Health")
                @Html.Label("Health")
            </div>

            <div>
                @Html.CheckBox("Easy")
                @Html.Label("Easy")
                @Html.CheckBox("Moderate")
                @Html.Label("Moderate")
                @Html.CheckBox("Hard")
                @Html.Label("Hard")
                @Html.CheckBox("VeryHard")
                @Html.Label("Very Hard")
            </div>

            <div>
                <input type="submit" value="Add" class="btn btn-success" />
            </div>
        </div>
    </div>
}